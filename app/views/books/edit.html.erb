<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <%= @book.errors.count %> errors occurred.
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <p>本のタイトル</p>
  <%= f.text_field :title %>

  <p>感想</p>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>

<%= link_to "Back", "/books" %>