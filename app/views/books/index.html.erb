<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>本のタイトル</th>
            <th>感想</th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", "/books/#{book.id}" %></td>
                <td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <p>本のタイトル</p>
  <%= f.text_field :title %>

  <p>感想</p>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>